@model CoreAndFood.Data.Models.urunekle
@{
    ViewData["Title"] = "AddFood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yiyecek Ekleme Sayfası</h2>
<br />
<form class="form-group" action="AddFood" asp-controller="Food" method="post" enctype="multipart/form-data">
    @Html.Label("Food Name")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    @Html.Label("Price")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Image URL")
    @*@Html.TextBoxFor(x => x.ImgURL, new { @class = "form-control" })*@
    <input type="file" name="ImgUrl" />
    <br />
    @Html.Label("Category")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" }) @*kategori seçerken droplist seklinde goruntıule*@
    <br />
    @Html.Label("Desctiption")
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>

</form>